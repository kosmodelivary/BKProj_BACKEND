		<servlet-class>com.academy.delivary.web.OrderController</servlet-class>  
	</servlet>
	<servlet-mapping>
		<servlet-name>BackendOrder</servlet-name>
		<url-pattern>/ADMIN/Order.do</url-pattern>
	</servlet-mapping>
	
