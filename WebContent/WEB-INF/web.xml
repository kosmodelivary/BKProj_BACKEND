	<display-name>BKProj_BACKEND</display-name>

	<!-- 페이징 처리 위한 context parameter -->
	<context-param>
		<param-name>PAGESIZE</param-name>
		<param-value>10</param-value>
	</context-param>
	<context-param>
		<param-name>BLOCKPAGE</param-name>
		<param-value>5</param-value>
